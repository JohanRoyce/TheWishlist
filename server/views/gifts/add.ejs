<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-8">
            <h1><%= title %></h1>
            <form class="form" method="post">
                
                <div class="form-group">
                    <label for="nameTextField">Gift name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter gift name"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="retailerTextField">Retailer</label>
                    <input type="text" class="form-control"
                    id="retailerTextField"
                    placeholder="Enter retailer"
                    name="retailer" required>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control"
                    id="priceTextField"
                    placeholder="Enter price"
                    name="price" required>
                </div>

                <div class="form-group">
                    <label for="discountTextField">Discount</label>
                    <input type="text" class="form-control"
                    id="discountTextField"
                    placeholder="Enter discount"
                    name="discount" required>
                </div>
                <br>
                
                <button class="btn-btn-primary" type="submit">
                    <i class="fas fa-edit"></i>Submit</button>
            </form>
        </div>
    </div>
</div>